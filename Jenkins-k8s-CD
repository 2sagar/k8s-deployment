pipeline {
  agent {
  label 'label2'
  }

  stages {
    stage('Cloning Git') {
      steps {
        checkout scm
      }
	}
	
	 stage('Deploying App to Kubernetes') {

        steps {
              sshagent(['ssh-k8s']) {
             sh "scp -o StrictHostKeyChecking=no  k8s-deployment-service-manifest-file.yaml  ubuntu@15.207.54.219:/home/ubuntu"
              sh "ssh -o StrictHostKeyChecking=no ubuntu@15.207.54.219 'kubectl apply -f k8s-deployment-service-manifest-file.yaml ' "
           

        }
      }
    }
	
  }
} 
